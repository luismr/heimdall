{
  "name": "@luismr/heimdall-api",
  "version": "0.0.2",
  "description": "Authentication and Authorization API with JWT, DDD, DynamoDB, bcrypt, Express, and Serverless.",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "serverless:dev": "serverless offline",
    "serverless:deploy": "serverless deploy",
    "serverless:package": "serverless package",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:migration:create": "typeorm-ts-node-commonjs migration:create ./src/commons/infrastructure/db/migrations/",
    "typeorm:migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/commons/infrastructure/Datasource.ts ./src/commons/infrastructure/db/migrations/",
    "typeorm:migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/commons/infrastructure/Datasource.ts",
    "typeorm:migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/commons/infrastructure/Datasource.ts"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "ts-node",
    "jwt",
    "auth",
    "ddd",
    "dynamodb",
    "heimdall"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/aws-lambda": "^8.10.131",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.50",
    "aws-sdk-client-mock": "^4.1.0",
    "cors": "^2.8.5",
    "eslint": "^9.27.0",
    "express": "^4.18.2",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.9.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.705.0",
    "@aws-sdk/lib-dynamodb": "^3.705.0",
    "@luismr/heimdall-middleware-express": "^0.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.1",
    "reflect-metadata": "^0.2.2",
    "serverless-http": "^3.2.0",
    "typeorm": "^0.3.24"
  }
}
